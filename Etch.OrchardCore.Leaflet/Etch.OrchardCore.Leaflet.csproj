<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.5.0</Version>
    <PackageId>Etch.OrchardCore.Leaflet</PackageId>
    <Title>Leaflet Maps</Title>
    <Authors>Etch UK Ltd.</Authors>
    <Description>Orchard Core module for creating interactive maps utilising Leaflet.</Description>
    <PackageTags>orchardcore;etchuk</PackageTags>
    <ProjectGuid>DF2FF4F8-B52A-4FA7-9730-6E9FD5823E1B</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="TileGenerator\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Etch.OrchardCore.Fields" Version="1.2.3" />
    <PackageReference Include="OrchardCore.Autoroute" Version="1.3.0" />
    <PackageReference Include="OrchardCore.ContentFields" Version="1.3.0" />
    <PackageReference Include="OrchardCore.ContentManagement" Version="1.3.0" />
    <PackageReference Include="OrchardCore.DisplayManagement" Version="1.3.0" />
    <PackageReference Include="OrchardCore.Media" Version="1.3.0" />
    <PackageReference Include="OrchardCore.ResourceManagement" Version="1.3.0" />
    <PackageReference Include="OrchardCore.Module.Targets" Version="1.3.0" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Assets\Common\" />
  </ItemGroup>

</Project>